<div {{ attributes }} data-controller="live">
    <input
        type="search"
        name="query"
        value="{{ computed.query }}"  <!-- Utilise computed.query ici -->
        data-model="query"
        data-action="input->live#update"
        placeholder="Search products..."
        class="minecraft-input"
        autocomplete="off"
    >
</div>

<div class="search-results">
    {% if computed.products is not empty %}
        <div class="product-grid">
            {% for product in computed.products %}
                <div class="product-card">
                    <img src="{{ asset('images/minecraft/' ~ product.minecraftImage) }}" alt="{{ product.name }}">
                    <h2>{{ product.name }}</h2>
                    <p>{{ product.price }} diamonds</p>
                    <p>Stock: {{ product.stock }}</p>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn-minecraft">Voir</a>
                </div>
            {% endfor %}
        </div>
    {% elseif computed.query is not empty %}
        <div class="no-results">
            <p>Aucun produit trouv√© pour "{{ computed.query }}"</p>
        </div>
    {% endif %}
</div>
