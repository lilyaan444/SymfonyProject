<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome to Minecraft Shop!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>🧱</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/minecraft.css') }}">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <header class="minecraft-box">
            <nav>
                <ul>
                    <li><a href="{{ path('app_product_index') }}" class="btn-minecraft">
                        <span class="home-icon">🏠</span> Home
                    </a></li>
                    <li><a href="{{ path('app_cart_index') }}" class="btn-minecraft">
                        <span class="cart-icon">🛒</span> Cart
                    </a></li>
                    {% if is_granted('ROLE_USER') %}
                        <li><a href="{{ path('app_logout') }}" class="btn-minecraft">
                        <span class="logout-icon">🚪</span> Logout
                    </a></li>
                    {% else %}
                        <li><a href="{{ path('app_login') }}" class="btn-minecraft">
                        <span class="login-icon">🔓</span> Login
                    </a></li>
                    {% endif %}
                </ul>
            </nav>
        </header>

        <main class="minecraft-box">
            {% block body %}{% endblock %}
        </main>

        <footer class="minecraft-box">
            <p>&copy; {{ 'now'|date('Y') }} Minecraft Shop. All rights reserved.</p>
        </footer>
    </body>
</html>
