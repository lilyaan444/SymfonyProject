{% extends 'base.html.twig' %}

{% block title %}Your Minecraft Cart{% endblock %}

{% block body %}
    <div {{ stimulus_controller('cart', {
        updateUrl: path('app_cart_update', {id: '__id__'}),
        removeUrl: path('app_cart_remove', {id: '__id__'})
    }) }}>
        <h1 class="minecraft-title">Your Minecraft Cart</h1>

        {% if items|length > 0 %}
            <table class="table-minecraft">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody data-cart-target="items">
                    {% for item in items %}
                        <tr>
                            <td>
                                <img src="{{ asset('images/minecraft/' ~ item.product.minecraftImage) }}" 
                                     alt="{{ item.product.name }}" 
                                     class="product-thumbnail">
                                {{ item.product.name }}
                            </td>
                            <td>
                                <input type="number" 
                                       value="{{ item.quantity }}" 
                                       min="1"
                                       data-product-id="{{ item.product.id }}"
                                       data-action="change->cart#updateQuantity"
                                       class="form-control-minecraft quantity-input">
                            </td>
                            <td>{{ item.product.price }} diamonds</td>
                            <td>{{ item.product.price * item.quantity }} diamonds</td>
                            <td>
                                <button data-product-id="{{ item.product.id }}"
                                        data-action="cart#removeItem"
                                        class="btn-minecraft">Remove</button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3"><strong>Total</strong></td>
                        <td data-cart-target="total"><strong>{{ total }} diamonds</strong></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>

            <form action="{{ path('app_cart_checkout') }}" method="post" class="checkout-form">
                <button type="submit" class="btn-minecraft btn-checkout">Pay with Diamonds</button>
            </form>
        {% else %}
            <p>Your cart is empty. <a href="{{ path('app_product_index') }}" class="btn-minecraft">Continue shopping</a></p>
        {% endif %}
    </div>
{% endblock %}