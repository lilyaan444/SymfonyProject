{% extends 'base.html.twig' %}

{% block title %}Order Confirmation - Minecraft Shop{% endblock %}

{% block body %}
    <h1>Order Confirmation</h1>

    <div class="order-confirmation minecraft-box">
        <h2>Thank you for your order!</h2>
        <p>Your order number is: <strong>{{ order.reference }}</strong></p>
        <p>We've sent a confirmation email to <strong>{{ order.user.email }}</strong>.</p>

        <h3>Order Summary</h3>
        {% for item in order.orderItems %}
            <div class="order-item">
                <span class="product-name">{{ item.product.name }}</span>
                <span class="product-quantity">x {{ item.quantity }}</span>
                <span class="product-price">{{ item.productPrice * item.quantity }} diamonds</span>
            </div>
        {% endfor %}
        <div class="order-total">
            <strong>Total: {{ order.total }} diamonds</strong>
        </div>

        <h3>Shipping Information</h3>
        <p>{{ order.shippingAddress.firstName }} {{ order.shippingAddress.lastName }}</p>
        <p>{{ order.shippingAddress.address }}</p>
        <p>{{ order.shippingAddress.city }}, {{ order.shippingAddress.postalCode }}</p>
        <p>{{ order.shippingAddress.country }}</p>
    </div>

    <a href="{{ path('app_product_index') }}" class="btn-minecraft">Continue Shopping</a>
{% endblock %}