{% extends 'base.html.twig' %}

{% block title %}Checkout - Minecraft Shop{% endblock %}

{% block body %}
    <h1>Checkout</h1>

    <div class="cart-summary minecraft-box">
        <h2>Order Summary</h2>
        {% for item in cart %}
            <div class="cart-item">
                <img src="{{ asset('images/minecraft/' ~ item.product.minecraftImage) }}" alt="{{ item.product.name }}" class="product-thumbnail">
                <span class="product-name">{{ item.product.name }}</span>
                <span class="product-quantity">x {{ item.quantity }}</span>
                <span class="product-price">{{ item.product.price * item.quantity }} diamonds</span>
            </div>
        {% endfor %}
        <div class="cart-total">
            <strong>Total: {{ total }} diamonds</strong>
        </div>
    </div>

    <div class="shipping-form minecraft-box">
        <h2>Shipping Information</h2>
        {{ form_start(form) }}
        {{ form_row(form.firstName) }}
        {{ form_row(form.lastName) }}
        {{ form_row(form.address) }}
        {{ form_row(form.city) }}
        {{ form_row(form.postalCode) }}
        {{ form_row(form.country) }}
        <button type="submit" class="btn-minecraft">Place Order</button>
        {{ form_end(form) }}
    </div>
{% endblock %}