<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{{ 'welcome'|trans }}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>ğŸ§±</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="{{ asset('css/minecraft.css') }}">
            {% if app.request.attributes.get('_route') starts with 'app_admin' %}
                <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
            {% endif %}
        {% endblock %}

{% block javascripts %}
            {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('app') }}
    <script src="{{ asset('build/app.js') }}" defer></script>

    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
{% endblock %}
    </head>
    <body>
        <header class="minecraft-box">
            <nav>
                <ul>
                    <li><a href="{{ path('app_product_index') }}" class="btn-minecraft">
                        <span class="home-icon">ğŸ </span> {{ 'home'|trans }}
                    </a></li>
                    <li><a href="{{ path('app_search') }}" class="btn-minecraft">{{ 'search'|trans }}</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('app_admin_dashboard') }}" class="btn-minecraft">
                            ğŸ“Š Dashboard
                        </a></li>
                    {% else %}
                        <li><a href="{{ path('app_cart_index') }}" class="btn-minecraft">
                            ğŸ›’ {{ 'cart'|trans }} <span class="cart-count" data-cart-target="count">{{ app.session.get('cart')|length }}</span>
                        </a></li>
                    {% endif %}
                    {% if is_granted('ROLE_USER') %}
                        <li><a href="{{ path('app_logout') }}" class="btn-minecraft">
                        <span class="logout-icon">âŒ</span> {{ 'logout'|trans }}
                        </a></li>
                    {% else %}
                        <li><a href="{{ path('app_login') }}" class="btn-minecraft">
                        <span class="login-icon">ğŸ”</span> {{ 'login'|trans }}
                    </a></li>
                    {% endif %}

</div>
                </ul>
            </nav>
        </header>
        <main class="minecraft-box">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </main>
    </body>
</html>